auto-reload yes
browser "brave %u"

unbind-key ,
# MACRO
bind-key SPACE macro-prefix

bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key g home
bind-key G end
bind-key U show-urls
bind-key s sort
bind-key S rev-sort
macro b open-in-browser
macro w set browser "mpv %u" ; open-in-browser ; set browser "brave %u"
macro a set browser "youtube-dl --add-metadata -xic -f bestaudio/best" ; open-in-browser ; set browser "brave %u"
macro v set browser "youtube-dl --add-metadata -i" ; open-in-browser ; set browser "brave %u"
