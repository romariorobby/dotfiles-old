#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $1 in
    1) setsid -f "$TERMINAL" -e pulsemixer ; sigdwmblocks 5;;
    2) pamixer -t ; sigdwmblocks 5;;
    4) pamixer --allow-boost -i 1; sigdwmblocks 5;; 
    5) pamixer --allow-boost -d 1; sigdwmblocks 5;;
    3) notify-send "ðŸ“¢ Volume Module" "\- Shows Volume ðŸ”Š, ðŸ”‡ if muted.
- Middle Click to mute.
- Scroll to change" ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon$vol%"
