#!/bin/sh
# Prints the current volume or ğŸ”‡ if muted.
source color.sh
# fg_norm="\x0d"
case $1 in
    1) setsid -f "$TERMINAL" -e pulsemixer ;;
    2) pamixer -t ; sigdwmblocks 5;;
    4) pamixer --allow-boost -i 1; sigdwmblocks 5;; 
    5) pamixer --allow-boost -d 1; sigdwmblocks 5;;
    3) notify-send "ğŸ“¢ Volume Module" "\- Shows Volume ğŸ”Š, ğŸ”‡ if muted.
- Middle Click to mute.
- Scroll to change" ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo -ne ${fg_red}ï± && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -ge "90" ]; then
	icon="${fg_red}ï€¨ ${fg_red}$vol"
elif [ "$vol" -ge "50" ]; then
	icon="${fg_yellow}ï€¨ $vol"
elif [ "$vol" -ge "25" ]; then
	icon="${fg_green}ï€§ $vol"
elif [ "$vol" -le "25" ]; then
	icon="${fg_red}ï€¦ $vol"
else
	icon="${fg_red}ï€¦"
fi

printf "%b" "$icon"
# echo -ne "$icon"
