#!/bin/sh
# Set as a cron job to check for new RSS entries for newsboat.
# If newsboat is open, sends it an "R" key to refresh.

ping -q -c 1 example.org > /dev/null || /usr/bin/notify-send "Hmmm, Do you have internet access?"

/usr/bin/notify-send "ðŸ“° Updating RSS feeds..."

pgrep -f newsboat$ && /usr/bin/xdotool key --window "$(/usr/bin/xdotool search --name newsboat)" R && exit

echo -ne "\x19ï…ƒ " > /tmp/newsupdate
sigdwmblocks 10
/usr/bin/newsboat -x reload
rm -f /tmp/newsupdate
sigdwmblocks 10
/usr/bin/notify-send "ðŸ“° RSS feed update complete."
