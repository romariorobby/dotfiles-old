#!/bin/sh
src="/home/$(whoami)/.local/src"
[[ ! -d "$src" ]] && git clone "https://github.com/romariorobby/dotfiles.git" "$src"
install(){
	cd $src/dwm && sudo make clean install
	cd $src/st && sudo make clean install
	cd $src/dmenu && sudo make clean install
	cd $src/yadav-dwmblocks && sudo make clean install
}
install
